<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvHTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHItemBarang"
        android:layout_width="274dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:text="Item Barang"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvHTanggal"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tvHJumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="10"
        app:layout_constraintStart_toStartOf="@+id/tvHItemBarang"
        app:layout_constraintTop_toBottomOf="@+id/tvHItemBarang" />

</androidx.constraintlayout.widget.ConstraintLayout>